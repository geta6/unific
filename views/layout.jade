doctype 5
html
  head
    if title != 'unific'
      title= title + ' - unific'
    else
      title= 'unific'

    //-
      Atom/RSS Feed
    //-
    if rss
      link(rel="alternate",type="application/rss+xml",href="#{rss}")

    //-
       Include Library (Primaly)
    //-

    //- javascript
    script(src='/socket.io/socket.io.js') 
    script(src='/lib/js/underscore-min.js')
    script(src='/lib/js/jquery-2.0.2.min.js')
    script(src='/lib/js/jquery-ui.min.js')
    script(src='/lib/js/bootstrap.min.js')
    script(src='/lib/js/moment.min.js')
    script(src='/lib/js/chardinjs.min.js')

    //- FancyBox
    script(src='/lib/js/jquery.fancybox.pack.js')
    link(rel='stylesheet', href='/lib/css/jquery.fancybox.css', media="screen")

    //- css
    link(rel='stylesheet', href='/lib/css/bootplus.min.css')
    link(rel='stylesheet', href='/lib/css/bootplus-responsive.min.css')
    link(rel='stylesheet', href='/lib/css/font-awesome.min.css')    
    link(rel='stylesheet', href='/lib/css/chardinjs.css')    

    //- Include User Scripts/Stylesheets
    !=js('view_helpers')
    !=js('io')
    !=css('main')

  body
    if background
      #AbsoluteBackground(style="background-image:url(#{background});opacity:0.2")
    else
      #AbsoluteBackground
    .container
      .row
        .span2#notification
          block notification

        .span7#contents
          .page-header
            h1= title
              if title != 'unific'
                small= ' - unific'
            if description
              p#Description(data-intro='説明文を変更できます。',data-position='left',contenteditable=true)= description

          block content
        .span3#utility
          block utility

        block modals