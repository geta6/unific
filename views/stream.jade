extends layout

//-
  notifications
//-
block notification
  .alert.alert-success#NewFeedIsAdded
    button.close &times;
    | New Feed.
  .alert.alert-info#NewArticleIsAdded
    button.close &times;
    | New Article.
  .alert.alert-success#FeedListIsEditted
    button.close &times;
    | Feed-List Editted.
  .alert.alert-error#SomethingWrong
    button.close &times;
    | Error!.

//-
  Contents
//-
block content

  //- When no feed or article
  .well#NoFeedIsAdded
    button.close &times;
    | No Feed Is Added.

  //- Articles
  ul.media-list#Articles

//-
  Control Panel
//-
block utility

  h2 Control Panel
  hr

  //-
    Usage
  //-
  #usage
    h4 Usage
    button.btn.btn-success#UsageButton
      i.icon-book
      |     View Usage
  hr

  //-
    Add Feed
  //-
  #add_feed
    h4 Subscribe Feed
    input.span2.search-query#FindFeedInput(type='text',placeholder="input url...")
    button.btn.btn-warning#FindFeedButton
      i.icon-search
      |     Find Feed
    br
    i ex: ' http://www3.nhk.or.jp/news '

  //- No Feeds
  .alert.alert-warning#NoFeedIsFound
    button.close(type='button') &times;
    | No Feed is Founded.(invalid url)

  hr

  //-
    Edit RSS List
  //-
  #edit_feed_list
    h4 Edit Feed List
    button.btn.btn-danger#EditFeedButton
      i.icon-list
      |    Edit Feed
  hr

  //-
    Change Background Image
  //-
  #ChangeBackgroundImage
    h4 Change Background
    input#ImageInput(type='file',accept="image/*")
    button.btn.btn-inverse#ClearBg
      i.icon-remove-circle
      |     Clear
  hr

block modals

  //-
    Edit Feed Modal Window
  //-
  #EditFeedModalWindow.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-header
      button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
      h3 Edit Feed List
    .modal-body
      ol#FeedList
    .modal-footer
      button.btn(data-dismiss='modal', aria-hidden='true') Close
      button.btn.btn-primary(data-dismiss='modal', aria-hidden='true')#ApplyEditFeedButton Apply Changes

  //-
    Add Feed Modal Window
  //-
  #CandidatesModalWindow.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-header
      button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
      h3 SubScribe Feeds
    .modal-body
      ol#CandidatesList
    .modal-footer
      button.btn(data-dismiss='modal', aria-hidden='true') Close
      button.btn.btn-primary(data-dismiss='modal', aria-hidden='true')#AddFeedButton Subscribe
